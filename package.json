{
  "name": "rollup-plugin-svelte",
  "version": "4.1.0",
  "description": "Compile Svelte components with Rollup",
  "main": "dist/rollup-plugin-svelte.cjs.js",
  "module": "dist/rollup-plugin-svelte.es.js",
  "jsnext:main": "dist/rollup-plugin-svelte.es.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "mocha",
    "pretest": "npm run build",
    "prepublish": "npm run lint && npm run build",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint src"
  },
  "repository": "rollup/rollup-plugin-svelte",
  "keywords": [
    "svelte",
    "rollup"
  ],
  "author": "Rich Harris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rollup/rollup-plugin-svelte/issues"
  },
  "homepage": "https://github.com/rollup/rollup-plugin-svelte#README",
  "devDependencies": {
    "eslint": "^4.19.1",
    "locate-character": "^2.0.5",
    "mocha": "^4.1.0",
    "rollup": "^0.62.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-watch": "^4.3.1",
    "sander": "^0.6.0",
    "source-map": "^0.7.3",
    "svelte": "^2.8.1"
  },
  "dependencies": {
    "require-relative": "^0.8.7",
    "rollup-pluginutils": "^2.3.0",
    "sourcemap-codec": "^1.4.1"
  },
  "peerDependencies": {
    "svelte": "*"
  }
}
